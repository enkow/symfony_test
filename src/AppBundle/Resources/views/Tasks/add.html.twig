{% extends 'AppBundle::admin/page.html.twig' %}

{% block title %}
  <i class="fa fa-plus"></i> Dodaj zadanie
{% endblock %}

{% block body %}
  {{ form_start(form) }}
    <div class="col-md-4">
      {{ form_row(form.title) }}
    </div>
    <div class="col-md-4">
      {{ form_row(form.notes) }}
    </div>
    <div class="col-md-4">
      {{ form_row(form.tags) }}
    </div>
      {{ form_rest(form) }}
      <div class="clearfix"></div>
      <button type="submit" class="btn btn-success">Dodaj</button>
  {{ form_end(form) }}
{% endblock %}
